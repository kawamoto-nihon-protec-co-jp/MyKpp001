<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MyActivity"
    android:background="@android:color/black">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="心拍数を表示"
        android:id="@+id/txt_msg"
        android:textColor="@android:color/white"
        android:layout_marginTop="79dp"
        android:textSize="45dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView android:id="@+id/titleDividerTop"
        android:layout_width="fill_parent"
        android:layout_height="3dip"
        android:src="@android:drawable/divider_horizontal_dark"
        android:scaleType="fitXY"
        android:gravity="fill_horizontal"
        android:layout_below="@+id/txt_msg"
        android:layout_centerHorizontal="true"
        android:background="@android:color/white"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_rate"
        android:textSize="60dp"
        android:textColor="@android:color/white"
        android:textIsSelectable="false"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="false"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/titleDividerTop" />

    <ImageView android:id="@+id/titleDividerUnder"
        android:layout_width="fill_parent"
        android:layout_height="3dip"
        android:src="@android:drawable/divider_horizontal_dark"
        android:scaleType="fitXY"
        android:gravity="fill_horizontal"
        android:background="@android:color/white"
        android:layout_below="@+id/txt_rate"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_send"
        android:id="@+id/btn_submit"
        android:textSize="40dp"
        android:background="@android:color/darker_gray"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_below="@+id/btn_submit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="74dp"
        android:textColor="@android:color/white"
        android:textSize="80dp"
        android:textIsSelectable="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_Test"
        android:layout_alignBottom="@+id/editText"
        android:layout_alignStart="@+id/btn_submit"
        android:textSize="20dp"
        android:textIsSelectable="false"
        android:textColor="@android:color/white" />

</RelativeLayout>
